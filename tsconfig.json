{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "rootDir": "./Src",
    "outDir": "./Build",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "strict": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "Build"]
}
